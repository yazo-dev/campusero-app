<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PontuacaoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/campus_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:paddingBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Congratulations!"
            android:textColor="@color/branco"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/tv_ganhou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You won"
            android:textColor="@color/texto"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_ponto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="300"
            android:textColor="@color/colorPrimary"
            android:textSize="170sp" />

        <TextView
            android:id="@+id/tv_pontos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="POINTS"
            android:textColor="@color/branco"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_posicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:text="You are now in 5th place with 430 points"
            android:textColor="@color/texto"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_continuar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="thanks"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/branco" />
</RelativeLayout>
